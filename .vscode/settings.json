{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "markdown.validate.enabled": true,
    "markdown.validate.fileLinks.enabled": "warning",
    "markdown.validate.fragmentLinks.enabled": "warning",
    "markdown.validate.fileLinks.markdownFragmentLinks": "warning",
    "markdown.validate.referenceLinks.enabled": "warning",
    "markdown.validate.ignoredLinks": [
        // github links
        "../../**"
    ],
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "never",
        "source.removeUnusedImports": "explicit"
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.next": true,
        "**/.parcel-cache": true,
        "**/*.code-search": true,
        "dist": true,
        "website": true,
        "coverage": true,
        ".nyc_output": true,
        "e2e/test-results": true,
        "e2e/test-report": true,
        "test/visual/assets": true
    },
    "search.useIgnoreFiles": true,
    "files.exclude": {
        "vitest.setup.ts": true,
        "vitest.extend.ts": true,
        "vitest.env.d.ts": true,
        "vitest.d.ts": true,
        "vitest.config.ts": true,
        "SECURITY.md": true,
        "rollup.config.mjs": true,
        "README.md": true,
        "publish.js": true,
        "publish-next.js": true,
        "playwright.config.ts": true,
        "playwright.setup.ts": true,
        "package-lock.json": true,
        "LICENSE": true,
        "eslint.config.mjs": true,
        "CONTRIBUTOR_LADDER.md": true,
        "CONTRIBUTING.md": true,
        "CODE_OF_CONDUCT.md": true,
        ".prettierignore": true,
        ".npmignore": true,
        ".npmrc": true,
        ".gitpod.yml": true,
        ".gitattributes": true,
        ".editorconfig": true,
        ".babelrcAlt": true,
        ".browserslistrc": true,
        ".DS_Store": true,
        ".babelrc": true,
        ".prettierrc": true,
        "CHANGELOG.md": true,
        "tsconfig.spec.json": true,
        ".codesandbox": true,
        ".devcontainer": true,
        ".git": true,
        "extensions": true,
        "ignore": true,
        "node_modules": true,
        "scripts": true,
        "index.ts": true,
        "index.node.ts": true,
        "package.json": true,
        "tsconfig-extensions.json": true,
        "tsconfig.json": true,
        "typedoc.config.json": true,
        ".gitignore": true,
        "**/*.spec.ts": true,
        "**/*.test.ts": true,
        "**/__snapshots__": true
    },
    "cSpell.words": [
        "behaviour",
        "fabricjs",
        "Familys",
        "unitless"
    ],
}